# Environment Configuration
# Copy this file to .env and fill in the values

# ── Database ──────────────────────────────────────────────
DATABASE_URL=sqlite+aiosqlite:///./whatsapp_agent.db

# ── WhatsApp Business API (Meta Cloud API) ────────────────
WHATSAPP_VERIFY_TOKEN=your-verify-token-here
WHATSAPP_API_TOKEN=your-api-token-here
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id

# ── External Client API ──────────────────────────────────
# For PoC / local development, this points to the mock API
# mounted on the same server.  In production, set this to
# the customer's real API endpoint.
EXTERNAL_API_BASE_URL=http://localhost:8000/external/v1

# ── Application ──────────────────────────────────────────
APP_NAME=WhatsApp Agent
DEBUG=true
